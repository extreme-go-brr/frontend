  "compilerOptions": {
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "bundler", 
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "types": ["node"] 
  },
  "include": [
  "vite.config.ts", 
  "src/**/*.ts", 
  "src/boot/*.ts",
  "quasar.config.js",
  "quasar.config.ts",] 
}